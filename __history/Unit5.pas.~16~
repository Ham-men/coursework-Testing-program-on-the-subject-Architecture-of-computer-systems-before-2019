procedure TForm5.Button4Click(Sender: TObject);
var
i,b,c:integer;
rezult : TModalResult;
f2:TextFile;
a:String;
begin
Label6.Caption:=IntToStr(kolotv);
for  i:=1 to 12 do                                            //отключение выбора ответа после окончани€ теста
 numvcl[i]:=1;
 otv:=1;

 Form2.Label8.Caption:=IntToStr(kolotv);
next(-numvopr);
 next(1);
 pokazotv;
  pkz2;

  assessment:=kolotv/12*100;
  if(assessment>=80)then
      ocenka:='5'
      else if(assessment>=60)and(assessment<80)then
      ocenka:='4'
      else if(assessment>=40)and(assessment<60)then
      ocenka:='3'
      else if(assessment<40)then
      ocenka:='2';
     Label8.Caption:=ocenka;

 //ShowMessage(' оличество ответов = '+IntToStr(kolotv));
 rezult := MessageDlg('ќценка = '+ocenka+#13#10+'—охранить результат?',mtInformation, [mbYes, mbNo], 0);

  if rezult = mrYes then begin
   a:='test.txt';                       //-------------------------сохранение
   AssignFile(f2,'test.txt');
    if FileExists(a) then
     Append(f2)
     else if FileExists(a)=false then
      Rewrite(f2);
  { if rezult = mrYes then                       //-------------------------сохранение
  if  Saveotv.Execute then begin
   a:=Saveotv.FileName;
   S:= Copy(a, Length(a)-3, 4);
     if S='.txt' then
   AssignFile(f2,Saveotv.FileName)
   else
    AssignFile(f2,Saveotv.FileName+'.txt');

    if FileExists(a) then
     Append(f2)
     else if FileExists(a)=false then
      Rewrite(f2);  }

   WriteLn(f2,Unit1.group);
   WriteLn(f2,Unit1.name1);
   WriteLn(f2,IntToStr(kolotv));
   WriteLn(f2,'number2');
   for b := 1 to 5 do begin                                  //ввод ответов в блокнот
    for c := 1 to 7 do
     Write(f2,numotv[b,c]);
      WriteLn(f2);
   end;

      for b := 6 to 12 do begin                                   //ввод ответов в блокнот
    for c := 1 to 7 do
     Write(f2,numotv[b,c]);
     WriteLn(f2);
      end;


  CloseFile(f2);
   end;

 end;


