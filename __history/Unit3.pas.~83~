procedure TForm3.next(a: Integer);           // + сделано (если ответили то если вернуться на этот вопрос то он не активен и сохронится вариант ответа)
begin
 numvopr:=numvopr+a;
   shapclear;                       //+доделать  вариант ответа   --  двумерный массив
 case numvopr of
   1: numb1;
   2: numb2;
   3: numb3;
   4: numb4;
   5: numb5;
   6: numb6;
   7: numb7;
   8: numb8;
   9: numb9;
   10: numb10;
   11: numb11;
   12: numb12;
 end;
 Rb1.Checked:=false;
 Rb2.Checked:=false;
 Rb3.Checked:=false;

 end;

