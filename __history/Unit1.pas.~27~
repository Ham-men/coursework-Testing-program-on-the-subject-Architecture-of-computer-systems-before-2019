uses Unit2, Unit3, Unit4, Unit5, ABOUT;

{$R *.dfm}



procedure TForm1.Button1Click(Sender: TObject);
var
i,i2,a,c:integer;
begin
  c:=0;

 if who=0 then begin
 Form2.Label4.Caption:='';
 Form2.Label8.Caption:='';
 Form3.Label6.Caption:='';
 Form5.Label6.Caption:='';


  for i := 1 to 12 do
 Unit3.numvcl[i]:=0;

  for i := 1 to 12 do
  for i2 := 1 to 6 do
 Unit3.numotv[i,i2]:=0;

 for i := 1 to 12 do
 Unit5.numvcl[i]:=0;

  for i := 1 to 12 do
  for i2 := 1 to 7 do
 Unit5.numotv[i,i2]:=0;

  Unit3.kolotv:=0;
  Unit5.kolotv:=0;

  Unit3.otv:=0;
  Unit5.otv:=0;

 name1:=Edit1.Text;
 group:=Edit2.Text;

 if name1='' then
 ShowMessage('введите имя')
 else if group='' then
 ShowMessage('введите группу')
 else if (name1='') and (group='') then
 ShowMessage('введите имя и группу')
 else begin
// Form2.Label1.Caption:=name1;
// Form2.Label2.Caption:=group;
a:=1;
While (a <t.Count-1) do begin
    if name1=t.Strings[a] then begin
      ShowMessage('Этот пользователь уже проходил тест.');
      c:=1;
      break;
    end;
    a:=a+16;
end;
    if c=0 then begin
    Hide;
    Form2.Show;
    end;
end;
 //Unit2.close1:=0;

 
 end


 else begin
 teacher:=Edit3.Text;
 if teacher=pass then begin
   //Hide;
  form4.Show;
 end
  else
  ShowMessage('неверный пароль');
 end;
  Unit3.otv:=0;
  Edit3.Text:='';
end;

procedure TForm1.FormActivate(Sender: TObject);
begin
 t := TStringList.Create;
   t.LoadFromFile('test.txt');
 Edit1.Visible:=false;
 Edit2.Visible:=false;
 Edit3.Visible:=false;
 Label1.Visible:=false;
 Label2.Visible:=false;
 Label3.Visible:=false;
 if who=0 then begin
 Edit1.Visible:=true;
 Edit2.Visible:=true;
 Label1.Visible:=true;
 Label2.Visible:=true;
 end
 else begin
  Edit3.Visible:=true;
 Label3.Visible:=true;
 end;
  Edit1.Text:='';
 Edit2.Text:='';
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
 who:=0;
 pass:='123';


end;

procedure TForm1.N2Click(Sender: TObject);
begin
who:=1;
Edit3.Text:='';
form1.Deactivate;
form1.Activate;
end;

procedure TForm1.N3Click(Sender: TObject);
begin
who:=0;
Edit3.Text:='';
form1.Deactivate;
form1.Activate;
end;

procedure TForm1.N4Click(Sender: TObject);
begin
AboutBox.Show;
end;

end.
